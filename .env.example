# Brandynette Video Streaming Server - Environment Configuration

# Server Configuration
PORT=7878
NODE_ENV=development

# RTMP Ingest Server Configuration (Receive streams FROM OBS/streaming software)
# Enable/disable RTMP ingest feature
RTMP_ENABLED=true

# RTMP Server Ports
RTMP_PORT=1935                    # RTMP ingest port (OBS streams here)
RTMP_HTTP_PORT=8000              # HLS output HTTP server port

# Stream Key Validation (optional)
RTMP_VALIDATE_KEYS=false         # Set to true to require valid stream keys
RTMP_VALID_KEYS=secret123,mystream,brandynette  # Comma-separated valid keys

# RTMP Media Root (where HLS files are saved)
RTMP_MEDIA_ROOT=./public

# RTSP Stream Configuration (Read FROM IP cameras - different from RTMP)
# Enable/disable RTSP streaming feature
RTSP_ENABLED=true

# RTSP Stream Sources (comma-separated)
# Format: rtsp://username:password@host:port/path
RTSP_STREAM_1=rtsp://admin:password@192.168.1.200:554/IPWEBCAM_A12
RTSP_STREAM_2=rtsp://admin:password@192.168.1.201:554/stream2
# RTSP_STREAM_3=rtsp://camera3.local:554/live

# RTSP Stream Names (must match order of RTSP_STREAM_X)
RTSP_NAME_1=Camera 1 - Front Door
RTSP_NAME_2=Camera 2 - Back Yard
# RTSP_NAME_3=Camera 3 - Living Room

# FFmpeg Configuration
FFMPEG_PATH=/usr/bin/ffmpeg
FFMPEG_THREADS=2
FFMPEG_PRESET=ultrafast
FFMPEG_CRF=23

# HLS Output Configuration
HLS_TIME=2
HLS_LIST_SIZE=3
HLS_FLAGS=delete_segments

# Stream Output Directory
STREAM_OUTPUT_DIR=./public/streams

# Stream Quality Settings
STREAM_VIDEO_CODEC=libx264
STREAM_AUDIO_CODEC=aac
STREAM_RESOLUTION=1280x720
STREAM_FRAMERATE=30
STREAM_BITRATE=2000k
STREAM_AUDIO_BITRATE=128k

# Stream Reconnection Settings
RTSP_RECONNECT_DELAY=5000
RTSP_MAX_RECONNECT_ATTEMPTS=10

# Debug Mode
DEBUG_RTSP=false
